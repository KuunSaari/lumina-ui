{
  "name": "lumina-ui",
  "version": "1.0.0",
  "description": "Components library by Vue3 + TS",
  "type": "module",
  "main": "./dist/umd/index.umd.cjs",
  "module": "./dist/es/index.js",
  "types": "./dist/types/core/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/es/index.js",
      "types": "./dist/types/core/index.d.ts",
      "require": "./dist/umd/index.umd.cjs"
    },
    "./dist/": {
      "import": "./dist/",
      "require": "./dist/"
    }
  },
  "sideEffects": [
    "./dist/index.css"
  ],
  "scripts": {
    "build": "cross-env BUILD_WATCH=false run-p build-es build-umd",
    "build:watch": "cross-env BUILD_WATCH=true run-p build-es:watch build-umd:watch",
    "build-umd": "vite build --config vite.umd.config.ts",
    "build-umd:watch": "vite build --watch --config vite.umd.config.ts",
    "build-es": "vite build --config vite.es.config.ts",
    "build-es:watch": "vite build --watch --config vite.es.config.ts",
    "release": "release-it"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/vue-fontawesome": "^3.0.8"
  },
  "devDependencies": {
    "@lumina-ui/components": "workspace:*",
    "@rollup/plugin-terser": "^0.4.4",
    "vite-plugin-compression2": "^1.3.3"
  },
  "peerDependencies": {
    "vue": "3.5.13"
  }
}
